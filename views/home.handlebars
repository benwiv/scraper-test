<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">Mongo Scraper</a>
  <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">homebase
          <span class="sr-only">(current)</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">articles saved for later</a>
      </li>
      <li class="nav-item">
        <a class="btn btn-danger scrape-new">find some new articles!</a>
      </li>
      <li class="nav-item">
        <a class="btn btn-danger clear">trash your articles!</a>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Myscraper Tower</h1>
    <p>NY Times Edition</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#each articles}}
  <div data-_id="{{this._id}}" class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.url}}">{{this.headline}}</a>
        <a class="btn btn-success save">save for later</a>
      </h3>
    </div>
    <div class="card-body">{{this.summary}}</div>
  </div>
  {{/each}} {{#unless articles.length}}
  <div class='alert alert-warning text-center'>
    <h4>tragedy! no new articles.</h4>
  </div>
  <div class="card">
    <div class="card-header text-center">
      <h3>hey, yo, whatcha wanna do?</h3>
    </div>
    <div class="card-body text-center">
      <h4>
        <a class="scrape-new">check out available articles</a>
      </h4>
      <h4>
        <a href="/saved">browse around your saved articles</a>
      </h4>
    </div>
  </div>
  {{/unless}}
</div>

<footer class="footer">
  <div class="container">
    <p>NY Times Edition - Myscraper Tower</p>
  </div>
</footer>

